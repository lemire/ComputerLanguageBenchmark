:- module(fibo,[main/1]).

:- use_module(library(write)).

fibo(0,1).
fibo(1,1).
fibo(N,Val) :- N > 0, N1 is N - 1, fibo(N1,Val1),
		N2 is N - 2, fibo(N2,Val2),
		Val is Val1 + Val2.

run_list([Arg|Args]) :-
	name(Arg,ArgStr), name(ArgN,ArgStr),
	fibo(ArgN,Val),
	write(Val), nl, halt.

main(Argv) :-
	run_list(Argv).

