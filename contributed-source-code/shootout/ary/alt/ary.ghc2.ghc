module Main where

import Array
import System

getAns :: Int -> IO ()
getAns len = do
               putStrLn (show (arr2 ! 1))
             where
               arr =  array (1,len) [(i, i-1) | i <- [1..len]]
               arr2 = array (1,len) [(i,arr ! (len-i+1)) | i <- [1..len]]

main = do
        ~[n] <- getArgs 
        getAns (read n::Int)
