-module(sumcol).
-export([main/1]).

%% get the program argument, which is how many test iterations to run
%% for this test, we ignore this parameter
main(_Args) ->
    Sum = sumcol( io:fread('', "~d"), 0),
    io:format( "~w~n", [Sum] ),
    halt().

sumcol(eof, Sum) ->    Sum;
sumcol({ok, [Integer]}, Sum) ->
    sumcol( io:fread('', "~d"), Sum + Integer).

