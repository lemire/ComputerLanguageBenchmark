(define (tak x y z)
  (if (>= y x)
      z
      (tak (tak (- x 1.0) y z)
           (tak (- y 1.0) z x)
           (tak (- z 1.0) x y))))

(define (takn n)
  (tak (* 3.0 n) (* 2.0 n) (* 1.0 n)))

(define (main argv)
	(display (takn (string->number (vector-ref argv 0))))
	(newline))

(main (current-command-line-arguments))
